# Database
DATABASE_URL="postgresql://aimak_user:aimak_password_2024@localhost:5432/aimak_db?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Application
PORT=4000
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Backend URL (for image uploads)
# Local: http://localhost:4000
# Production: https://your-api-domain.onrender.com
# Note: RENDER_EXTERNAL_URL is automatically provided by Render
APP_URL=http://localhost:4000

# Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Translation AI Configuration
# Priority: 1. GEMINI_API_KEY (recommended, free tier available)
#          2. OPENROUTER_API_KEY (fallback)
#
# Get Gemini API Key (FREE): https://makersuite.google.com/app/apikey
# Get OpenRouter API Key: https://openrouter.ai/settings/keys

# Google Gemini AI (Primary - recommended, has free tier)
GEMINI_API_KEY=your-gemini-api-key

# OpenRouter AI (Fallback - may require credits for some models)
# Recommended free model: tngtech/deepseek-r1t2-chimera:free
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL=tngtech/deepseek-r1t2-chimera:free
